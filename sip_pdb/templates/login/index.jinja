{% extends "login/layout.jinja" %}

{% block title %}Login{% endblock %}

{% from 'macros.jinja' import render_field %}

{% block content %}
<div class="row">
<div class="col text-center">
<h1>Login {{'Admin' if is_admin else 'Pendaftar'}}</h1>
</div>
</div>
<div class="row">
	<div class="col">
		<form method="POST" 
		action="{{ url_for('auth.login_admin') if is_admin else url_for('auth.login') }}" 
		hx-boost="false">
		  {{ form.csrf_token }}
		  {{ render_field(form.username) }}
		  {{ render_field(form.password) }}
		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
</div>
{% endblock %}