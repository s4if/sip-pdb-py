{% if not is_htmx %}
    {% extends "admin/layout.jinja" %}
    {% block title %}Lihat Pendaftar{% endblock %}
{% else %}
    <title>Lihat Pendaftar</title>
{% endif %}

{% from 'macros.jinja' import render_notif %}

{% block content %}

{{ render_notif(error, success, info) }}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ url_for('admin.beranda') }}">Beranda</a></li>
        <li class="breadcrumb-item active">Data Pendaftar</li>
    </ol>
</nav>
<h1 class="h2">Lihat Data Pendaftar</h1>

<div class="row">
<div class="col">
<table id="tabel_utama" class="table table-striped table-sm" style="width:90%">
    <thead>
        <tr>
            <th>Kode Bayar</th>
            <th>Nama</th>
            <th>Jumlah Pembayaran</th>
            <th>Tanggal Bayar</th>
            <th>Status Verifikasi</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
</div>
</div>
<script>
$( document ).ready(function() {
    new DataTable('#tabel_utama', {
        ajax: "{{url_for('admin.data_pembayaran')}}",
        pageLength: 25
    });
});
</script>
{% endblock %}